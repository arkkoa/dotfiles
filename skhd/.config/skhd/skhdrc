# change window focus within space
alt - j: yabai -m window --focus south
alt - k: yabai -m window --focus north
alt - h: yabai -m window --focus west
alt - l: yabai -m window --focus east

#change focus between external displays (left and right)
alt - i: yabai -m display --focus west
alt - o: yabai -m display --focus east

# rotate layout clockwise
cmd + alt - r: yabai -m space --rotate 270

# flip along y-axis
ctrl + alt - y: yabai -m space --mirror y-axis

# flip along x-axis
ctrl + alt - x: yabai -m space --mirror x-axis

# toggle window float
# <rows>:<cols>:<start-x>:<start-y>:<width>:<height>
cmd + alt - t: yabai -m window --toggle float --grid 9:5:1:1:3:7

# maximize a window
ctrl + alt - return: yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
ctrl + alt - e: yabai -m space --balance

# increase window size horizontally
ctrl + alt - m: yabai -m window --resize right:20:0
ctrl + alt - n: yabai -m window --resize left:-20:0

# swap windows
ctrl + alt - j: yabai -m window --swap south
ctrl + alt - k: yabai -m window --swap north
ctrl + alt - h: yabai -m window --swap west
ctrl + alt - l: yabai -m window --swap east

# move window and split
cmd + alt - j : yabai -m window --warp south
cmd + alt - k : yabai -m window --warp north
cmd + alt - h : yabai -m window --warp west
cmd + alt - l : yabai -m window --warp east

# move window to display left and right
ctrl + alt - i: yabai -m window --display west; yabai -m display --focus west;
ctrl + alt - o: yabai -m window --display east; yabai -m display --focus east;

#move window to prev and next space
# cmd + alt - p: yabai -m window --space prev;
# cmd + alt - n: yabai -m window --space next;

# move window to space #
cmd + alt - 1: yabai -m window --space 1;
cmd + alt - 2: yabai -m window --space 2;
cmd + alt - 3: yabai -m window --space 3;
cmd + alt - 4: yabai -m window --space 4;
cmd + alt - 5: yabai -m window --space 5;
cmd + alt - 6: yabai -m window --space 6;
cmd + alt - 7: yabai -m window --space 7;
